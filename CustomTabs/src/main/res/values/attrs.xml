<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="CustomButton">
        <attr name="icon" format="reference" />
        <attr name="iconWidth" format="dimension" />
        <attr name="iconHeight" format="dimension" />
        <attr name="iconLabelGap" format="dimension" />
        <attr name="paddingStartEnd" format="dimension" />
        <attr name="labelText" format="string" />
    </declare-styleable>

    <declare-styleable name="GroupLayout">
        <attr name="background" format="reference" />
        <attr name="clipBg" format="reference" />

        <attr name="fullPadding" format="dimension" />

        <attr name="tabIconTint" format="color" />
        <attr name="selectedTabIconTint" format="color" />

        <attr name="tabTextColor" format="color" />
        <attr name="tabTextSize" format="dimension" />
        <attr name="tabFontFamily" format="reference" />

        <attr name="selectedTabTextColor" format="color" />
        <attr name="selectedTabTextSize" format="dimension" />
        <attr name="selectedTabFontFamily" format="reference" />

        <attr name="selectedTabIndex" format="integer" />

        <attr name="tabAnimationDuration" format="integer" />

    </declare-styleable>
</resources>